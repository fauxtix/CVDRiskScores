<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVDRiskScores.MVVM.Views.SCORE2.Score2IntroPage"
			 xmlns:resx="clr-namespace:CVDRiskScores.Resources.Languages"
             Title="{resx:Localize Key=TituloScore2}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="BorderColor1">#FF7A59</Color>
            <Color x:Key="BorderColor2">#D9480F</Color>

            <Style x:Key="CustomBorderStyle" TargetType="Border">
                <Setter Property="StrokeThickness" Value="2" />
                <Setter Property="StrokeShape" Value="RoundRectangle 20,0,0,20" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Background" Value="#FF7A59" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="10">
            <Border Style="{StaticResource CustomBorderStyle}">
                <Border.Stroke>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="White" Offset="0.0" />
                        <GradientStop Color="#FFF3F2" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Stroke>

                <Label Text="{resx:Localize Key=Tab_Introducao}"
                        FontFamily="Poppins"
                       TextColor="White"
                       FontSize="18"
                       FontAttributes="Bold" />
            </Border>

            <BoxView Color="#FF7A59" HeightRequest="3" HorizontalOptions="Fill" />

            <VerticalStackLayout Padding="0,6">
                <Label Text="{resx:Localize Key=TituloFechar}" FontFamily="Poppins"/>
                <Label Margin="0,6" Text="{resx:Localize Key=Intro_Paragrafo_Score2_2}" FontFamily="Poppins"/>

                <!-- New explicit disclaimer + provenance (explanation moved to popup) -->
                <Border x:Name="DisclaimerFrame" Padding="8" Margin="0,8" BackgroundColor="#FFF5F5" Stroke="#D9534F" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                    <VerticalStackLayout>
                        <Label Text="{resx:Localize Key=Validation_SCORE2_Disclaimer_Title}" FontAttributes="Bold" TextColor="#D9534F" />
                        <Label x:Name="DataVersionLabel" Text="" FontSize="12" TextColor="#666" />

                        <!-- Replaced HorizontalStackLayout with Grid so the acknowledgement text can wrap -->
                        <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto" ColumnSpacing="12" VerticalOptions="Center" Margin="0,6,0,0">
                            <CheckBox x:Name="AcknowledgeCheckbox" IsChecked="False" CheckedChanged="AcknowledgeCheckedChanged" Grid.Column="0" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="{resx:Localize Key=Validation_SCORE2_Acknowledge}" LineBreakMode="WordWrap" VerticalOptions="Center" HorizontalOptions="Start" />
                            <Button Grid.Column="2" Text="{resx:Localize Key=Validation_SCORE2_LearnMore}" Clicked="LearnMoreBtn_Clicked" HorizontalOptions="End" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Calibration explanation section -->
                <Border Padding="10" Margin="0,8" BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource Gray950Brush}}" Stroke="{StaticResource BorderColor2}" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{resx:Localize Key=Calibration_Intro_Title}" FontAttributes="Bold" FontSize="16" />
                        <Label Text="{resx:Localize Key=Calibration_Intro_Explanation}" LineBreakMode="WordWrap" FontSize="13" />

                        <VerticalStackLayout Margin="0,6,0,0" Spacing="6">
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="8" VerticalOptions="Center">
                                <Label Text="•" FontSize="18" VerticalOptions="Center" Grid.Column="0" />
                                <Label Text="{resx:Localize Key=Calibration_Intro_Low}" LineBreakMode="WordWrap" Grid.Column="1" />
                            </Grid>

                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="8" VerticalOptions="Center">
                                <Label Text="•" FontSize="18" VerticalOptions="Center" Grid.Column="0" />
                                <Label Text="{resx:Localize Key=Calibration_Intro_Moderate}" LineBreakMode="WordWrap" Grid.Column="1" />
                            </Grid>

                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="8" VerticalOptions="Center">
                                <Label Text="•" FontSize="18" VerticalOptions="Center" Grid.Column="0" />
                                <Label Text="{resx:Localize Key=Calibration_Intro_High}" LineBreakMode="WordWrap" Grid.Column="1" />
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Examples button -->
                        <Button Text="{resx:Localize Key=Calibration_Examples_ShowButton}" Clicked="ShowCalibrationExamples_Clicked" HorizontalOptions="End" Margin="0,8,0,0" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>

            <BoxView Color="#FF7A59" HeightRequest="1" HorizontalOptions="Fill" />

            <TableView Intent="Menu">
                <TableRoot>
                    <TableSection 
                        Title="{resx:Localize Key=Intro_Paragrafo_3}">
                        <TextCell Text="{resx:Localize Key=Intro_Score2_Item1_Text}"
                                  Detail="{resx:Localize Key=Intro_Score2_Item1_Detail}" />
                        <TextCell Text="{resx:Localize Key=Intro_Score2_Item2_Text}"
                                  Detail="{resx:Localize Key=Intro_Score2_Item2_Detail}" />
                        <TextCell Text="{resx:Localize Key=Intro_Score2_Item3_Text}"
                                  Detail="{resx:Localize Key=Intro_Score2_Item3_Detail}" />
                        <TextCell Text="{resx:Localize Key=Intro_Score2_Item4_Text}"
                                  Detail="{resx:Localize Key=Intro_Score2_Item4_Detail}" />
                        <TextCell Text="{resx:Localize Key=Intro_Score2_Item5_Text}"
                                  Detail="{resx:Localize Key=Intro_Score2_Item5_Detail}" />
                        <TextCell Text="{resx:Localize Key=Intro_Score2_Item6_Text}"
                                  Detail="{resx:Localize Key=Intro_Score2_Item6_Detail}" />
                    </TableSection>
                </TableRoot>
            </TableView>

            <BoxView Color="#FF7A59" HeightRequest="1" HorizontalOptions="Fill" />

            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="Auto, *" ColumnSpacing="12">
              <!-- cabeçalho ocupa as duas colunas -->
              <Label Margin="0, 5, 0, 10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                     Text="{resx:Localize Key=Intro_Score2_QuickInterpretation}"
                     FontAttributes="Bold"
                      FontFamily="Poppins"
                     VerticalOptions="Center" />

              <!-- Risco baixo -->
              <Label Grid.Row="1" Grid.Column="0"
                     Text="🟢"
                     FontSize="18"
                     VerticalOptions="Center"
                      FontFamily="Poppins"
                     HorizontalOptions="Start" />
              <Label Grid.Row="1" Grid.Column="1"
                     Text="{resx:Localize Key=Validation_SCORE2_Recomendacao_1}"
                     LineBreakMode="WordWrap"
                     HorizontalOptions="Start"
                      FontFamily="Poppins"
                     VerticalOptions="Center" />

              <!-- Risco intermédio -->
              <Label Grid.Row="2" Grid.Column="0"
                     Text="🟠"
                     FontSize="18"
                     VerticalOptions="Center"
                      FontFamily="Poppins"
                     HorizontalOptions="Start" />
              <Label Grid.Row="2" Grid.Column="1"
                     Text="{resx:Localize Key=Validation_SCORE2_Recomendacao_2}"
                     LineBreakMode="WordWrap"
                     HorizontalOptions="Start"
                      FontFamily="Poppins"
                     VerticalOptions="Center" />

              <!-- Risco alto -->
              <Label Grid.Row="3" Grid.Column="0"
                     Text="🔴"
                     FontSize="18"
                     VerticalOptions="Center"
                     HorizontalOptions="Start" />
              <Label Grid.Row="3" Grid.Column="1"
                     Text="{resx:Localize Key=Validation_SCORE2_Recomendacao_3}"
                     LineBreakMode="WordWrap"
                     HorizontalOptions="Start"
                      FontFamily="Poppins"
                     VerticalOptions="Center" />
            </Grid>

            <BoxView Color="#FF7A59" HeightRequest="1" HorizontalOptions="Fill" />

            <FlexLayout JustifyContent="Center" Margin="0,6,0,12">
                <Button x:Name="SimulationBtn"
                        IsEnabled="False"
                        Text="{resx:Localize Key=Intro_Botao_Simulacao}"
                        Clicked="SimulationBtn_Clicked"
                        BackgroundColor="#D9480F"
                        TextColor="White"
                        CornerRadius="8"
                         FontFamily="PoppinsSemiBold"
                        Padding="12,8"
                        FontSize="16" />
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>